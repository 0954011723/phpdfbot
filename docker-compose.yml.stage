version: '3'

networks:
  reverse-proxy:
    external:
      name: reverse-proxy

services:
  phpdfbot:
    image: webdevops/php-apache:7.4
    container_name: phpdfbot
    restart: always
    networks:
      - reverse-proxy
    volumes:
      - .:/var/www/app
    working_dir: /var/www/app
    environment:
      - VIRTUAL_HOST=phpdfbot.devi.tools
      - WEB_DOCUMENT_ROOT=/var/www/app/public
      - LETSENCRYPT_EMAIL=wilcorrea@gmail.com
      - LETSENCRYPT_HOST=phpdfbot.devi.tools

